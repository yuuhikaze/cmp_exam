<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER_LEFT" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.yuuhikaze.exam_02.controllers.Scene03">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <Label text="Name" />
      <TextField fx:id="nameField" />
      <Label text="Surname" />
      <TextField fx:id="surnameField" />
      <Label text="Career" />
      <TextField fx:id="careerField" />
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Button fx:id="saveButton" onAction="#savePerson" mnemonicParsing="false" text="Save" />
            <Button fx:id="closePopupButton" onAction="#closePopup" mnemonicParsing="false" text="Exit" />
         </children>
      </HBox>
   </children>
</VBox>
